;
; Agent_killer.inf
;

[Version]
Signature="$WINDOWS NT$"
Class=System ; TODO: specify appropriate Class
ClassGuid={4d36e97d-e325-11ce-bfc1-08002be10318} ; TODO: specify appropriate ClassGuid
Provider=%ManufacturerName%
CatalogFile=Agent_killer.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages
PnpLockdown=1

[DestinationDirs]
DefaultDestDir = 12
Agent_killer_Device_CoInstaller_CopyFiles = 11

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
Agent_killer.sys  = 1,,
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll=1 ; make sure the number matches with SourceDisksNames

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%Agent_killer.DeviceDesc%=Agent_killer_Device, Root\Agent_killer ; TODO: edit hw-id

[Agent_killer_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
Agent_killer.sys

;-------------- Service installation
[Agent_killer_Device.NT.Services]
AddService = Agent_killer,%SPSVCINST_ASSOCSERVICE%, Agent_killer_Service_Inst

; -------------- Agent_killer driver install sections
[Agent_killer_Service_Inst]
DisplayName    = %Agent_killer.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\Agent_killer.sys

;
;--- Agent_killer_Device Coinstaller installation ------
;

[Agent_killer_Device.NT.CoInstallers]
AddReg=Agent_killer_Device_CoInstaller_AddReg
CopyFiles=Agent_killer_Device_CoInstaller_CopyFiles

[Agent_killer_Device_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll,WdfCoInstaller"

[Agent_killer_Device_CoInstaller_CopyFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll

[Agent_killer_Device.NT.Wdf]
KmdfService =  Agent_killer, Agent_killer_wdfsect
[Agent_killer_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="<Your manufacturer name>" ;TODO: Replace with your manufacturer name
DiskName = "Agent_killer Installation Disk"
Agent_killer.DeviceDesc = "Agent_killer Device"
Agent_killer.SVCDESC = "Agent_killer Service"
